{
  "compilerOptions": {
    "jsx": "react",
    "target": "esnext",                 // 指定编译后的 JavaScript 版本
    "module": "commonjs",               // 使用 CommonJS 模块系统
    "strict": true,                     // 启用严格类型检查
    "esModuleInterop": true,            // 支持与 CommonJS 模块的互操作性
    "moduleResolution": "node",         // 模块解析策略，使用 Node.js 风格
    "outDir": "./dist",                 // 输出目录
    "rootDir": "./src",                 // 项目根目录
    "skipLibCheck": true                // 跳过类型库检查
  },
  "include": ["src/**/*", "src/main.ts"],              // 包含的文件
  "exclude": ["node_modules", "dist"]   // 排除的文件或目录
}